<% filter :dmark2html do %>
#section %h{Global options}

<%= indent_for_dmark(1, dmark_options_for(@items['/doc/reference/commands/_nanoc'])) %>

<% @items.find_all('/doc/reference/commands/*').reject { |i| i[:name] == 'nanoc' }.sort_by { |i| i[:name].to_s }.each do |command| %>
<%= render "/command.dmark.*", item: command %>
<% end %>
<% end %>
